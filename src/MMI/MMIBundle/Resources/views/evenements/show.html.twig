{% extends '::base.html.twig' %}

{% block body -%}
{{parent()}}
    <h1>{{ entity.nom }}</h1>
    <div class="line"></div>
<br>
                <h3>Nom</h3>
                <p>{{ entity.nom }}</p>
                <h3>Description</h3>
                <p>{{ entity.description }}</p>
                <h3>Date de l'événement</h3>
                <p>{{ entity.date|date('Y-m-d H:i:s') }}</p>
                <h3>Photo</h3>
                <p>{{ entity.photo }}</p>

        <ul class="record_actions">
    <li>
        <a style="color:black" class="btn btn-default" href="{{ path('evenements') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a style="color:black" class="btn btn-default" href="{{ path('evenements_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
