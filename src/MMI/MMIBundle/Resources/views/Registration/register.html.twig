{% extends "::layoutFOS.html.twig" %}

{% block body %}
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="{{ path('mmi_accueil') }}"><img class="img1" src="{{ asset('bundles/mmimmi/images/logo.png') }}" alt="logo"></a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <ul class="nav navbar-nav">
          <li><a href="{{ path('mmi_agenda') }}">Agenda</a></li>
          <li><a href="{{ path('mmi_news') }}">News</a></li>
          <li><a href="{{ path('evenements') }}">Événements</a></li>
          <li><a href="{{ path('mmi_portfolio') }}">Portfolio</a></li>
          <li><a href="{{ path('mmi_videos') }}">Vidéos</a></li>
          <li><a href="{{ path('mmi_grille') }}">Grille</a></li>        
          <li><a href="{{path('mmi_direct')}}">Direct</a></li>
        </ul>
        {% endif %}
        <ul class="nav navbar-nav navbar-right">
          {% if is_granted('ROLE_ADMIN') %}
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administrateur <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="{{ path('fos_user_registration_register') }}">Ajouter un utilisateur</a></li>
            </ul>
          </li>
          {% endif %}
          {% if app.user %}
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Bonjour {{ app.user.username }} ! <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
               <li><a href="{{ path('fos_user_security_logout') }}">Deconnexion</a></li>
            </ul>
          </li>
          <li><a href="#"></a></li>
          {% else %}
          <li><a href="{{ path('fos_user_security_login') }}">Connectez-vous</a></li>

          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% endblock %}
